# Telegram Bot Configuration
# Copy this file to .env and fill in your values

# Bot token from @BotFather
BOT_TOKEN=your_bot_token_here

# Comma-separated list of Telegram user IDs who should have admin access
# You can get your ID from @userinfobot
ADMIN_IDS=123456789,987654321

# Database Configuration
# For local development (PostgreSQL on same machine):
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/telegram_bot

# For Docker Compose (use postgres as hostname):
# DATABASE_URL=postgresql://postgres:postgres@postgres:5432/telegram_bot

# Format: postgresql://username:password@host:port/database_name
# - username: PostgreSQL user (default: postgres)
# - password: PostgreSQL password (default: postgres)
# - host: localhost (local) or postgres (Docker)
# - port: 5432 (default PostgreSQL port)
# - database_name: telegram_bot (default)
